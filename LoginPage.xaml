<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProctorMVP.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage">
    <VerticalStackLayout>
        <Label
            FontAttributes="Bold"
            FontSize="30"
            HorizontalTextAlignment="Center"
            Text="Welcome Back!" />
        <Entry
            x:Name="Email"
            Margin="30,10,30,0"
            Placeholder="Email" />
        <Entry
            x:Name="Password"
            Margin="30,10,30,0"
            IsPassword="True"
            Placeholder="Password" />
        <Label
            x:Name="Errors"
            Margin="0,5,0,0"
            HorizontalTextAlignment="Center"
            Text=""
            TextColor="Red" />
        <Button
            x:Name="Signin"
            Margin="30,10,30,0"
            BackgroundColor="Green"
            Clicked="TryLogin"
            Text="Sign In"
            TextColor="White" />
        <Button
            x:Name="Createacc"
            Margin="30,10,30,0"
            BackgroundColor="White"
            BorderColor="Grey"
            Clicked="TryCreateAccount"
            Text="Create Account"
            TextColor="Black" />
    </VerticalStackLayout>
</ContentPage>