<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProctorMVP.Periods"
             Title="Periods">

    <Grid RowDefinitions="*, Auto"
          Padding="20">
        <!-- Scrollable list of period buttons -->
        <ScrollView>
            <VerticalStackLayout x:Name="PeriodList" Spacing="10" />
        </ScrollView>

        <!-- Bottom button row -->
        <Grid Row="1" ColumnDefinitions="*,*" Padding="0,20,0,0">
            <Button Text="Back"
                    HorizontalOptions="Start"
                    Clicked="GoBack"
                    VerticalOptions="End"
                    Margin="0,0,10,0" 
                    CornerRadius="20"/>
            <Button Grid.Column="1" Text="Add Period"
                    HorizontalOptions="End"
                    Clicked="AddPeriod"
                    VerticalOptions="End"
                    Margin="10,0,0,0" 
                    CornerRadius="20"/>
        </Grid>
    </Grid>
</ContentPage>