<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProctorMVP.Assignments"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Assignments">

    <Grid Padding="20" RowDefinitions="*, Auto">
        <ScrollView>
            <VerticalStackLayout x:Name="PeriodList" Spacing="10" />
        </ScrollView>

        <Grid
            Padding="0,20,0,0"
            ColumnDefinitions="*,*"
            Row="1">
            <Button
                Margin="0,0,10,0"
                Clicked="GoBack"
                CornerRadius="20"
                HorizontalOptions="Start"
                Text="Back"
                VerticalOptions="End" />
            <Button
                Grid.Column="1"
                Margin="10,0,0,0"
                Clicked="AddAssignment"
                CornerRadius="20"
                HorizontalOptions="End"
                Text="Add Assignment"
                VerticalOptions="End" />
        </Grid>
    </Grid>
</ContentPage>