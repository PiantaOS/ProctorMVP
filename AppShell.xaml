<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProctorMVP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProctorMVP"
    Title="ProctorMVP"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Proctr Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Periods"
        ContentTemplate="{DataTemplate local:Periods}"
        Route="Periods" />
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:Dashboard}"
        Route="Dashboard" />
    <ShellContent
        Title="PeriodDB"
        ContentTemplate="{DataTemplate local:PeriodPage}"
        Route="PeriodPage" />
    <ShellContent
        Title="Assignments"
        ContentTemplate="{DataTemplate local:Assignments}"
        Route="Assignments" />
    <ShellContent
        Title="AssignmentCreator"
        ContentTemplate="{DataTemplate local:AssignmentCreator}"
        Route="AssignmentCreator" />
    <ShellContent
        Title="AssignmentPage"
        ContentTemplate="{DataTemplate local:AssignmentPage}"
        Route="AssignmentPage" />
    <ShellContent
        Title="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Students"
        ContentTemplate="{DataTemplate local:Students}"
        Route="Students" />
    <ShellContent
        Title="StudentCreator"
        ContentTemplate="{DataTemplate local:StudentCreator}"
        Route="StudentCreator" />
    <ShellContent
        Title="Submissions"
        ContentTemplate="{DataTemplate local:Submissions}"
        Route="Submissions" />

</Shell>
